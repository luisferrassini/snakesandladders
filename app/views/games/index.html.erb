<div class="grid grid-cols-5 gap-5">
    <% @games.each do |game| %>
        <a href="/game/<%=game.id%>">
            <div class="rounded-lg p-3 w-48 h-48 dark:bg-neutral-500">
                <h2 class="text-2xl font-medium leading-tight text-white">
                    <%=game.board.title%>
                </h2>
            </div>
        </a>
    <% end %>
</div>